<html t:type="layout" title="Admin"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

	<t:zone t:id="adminModuleZone">
		<t:delegate to="activeAdminModule" />
	</t:zone>

	<p:sidebar>
		<h4><span>Admin</span> Menü</h4>

		<div class="sidebar-content">
			<ul>
				<li><t:eventLink event="showUserManagementPanel" zone="adminModuleZone">Usermanagement</t:eventLink></li>
				<li><t:eventLink event="showEditEntryPanel" zone="adminModuleZone">Add Entry</t:eventLink></li>
				<li><t:eventLink event="showEntryManagementPanel" zone="adminModuleZone">Einträge verwalten</t:eventLink></li>
			</ul>
		</div>
		<hr/>
		<t:security.loginLink />
	</p:sidebar>

	<t:block t:id="editEntryBlock">
		<t:editBlogEntryPanel />
	</t:block>

	<t:block t:id="userManagementBlock">
		<t:userManagementPanel />
	</t:block>
	
	<t:block t:id="entryManagementBlock">
		<t:entryManagementPanel />
	</t:block>
</html>
